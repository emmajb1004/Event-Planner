<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<title>Organizer Home</title>
</head>
<body>
<div class="container">
    <h1 class="mb-4">Organizer Home Page</h1>
        <% setting.forEach(function(settings){ %>
        <h4 class="mb-4"><%= settings.manager_name %></h4>
        <h6 class="mb-4"><%= settings.settings_description %></h6>
        <% }) %>
    <a href="/events" class="btn btn-success">Create New Event</a>
    <br>
    <a href="/bookings">See Bookings</a>
    <br>
    <a href="/">Back to Home</a>
    <br>
    <a href="/settings">Settings</a>
    <h4 class="mb-4, mt-4">Published</h4>
    <% published_events.forEach(function(event){ %>
        <div class="card mt-4">
            <div class="card-body">
            <h4 class="card-title"><%= event.title %></h4>
            <div class="card-text mb-2">
            <br>
            <h6>description:</h6>
            <%= event.event_description %>
            <h6 class="mt-3">amount of full price tickets:</h6>
            <%= event.ticket_type_full %>
            <br>
            <h6 class="mt-3">full price:</h6>
            $<%= event.ticket_price_full %>
            <h6 class="mt-3">amount of discount price tickets:</h6>
            <%= event.ticket_type_discount %>
            <h6 class="mt-3">discount price:</h6>
            $<%= event.ticket_price_discount %>
            <h6 class="mt-3">event date:</h6>
            <%= event.event_date %>
        </div>
            <div class="card-subtitle text-muted mb-2 mt-4">
            created: <%= event.createdAt %> 
            <br>
            published: <%= event.publishedAt%> 
            <br>
            modified: <%= event.modifiedAt%> 
            </div>
            <a href="/eventDetails/<%= event.id %>">
                <button type="submit" class="btn btn-primary">Attendee Page</button>
            </a>
            <div class="grid gap-0 column-gap-3">
            <a href="/events/<%= event.id %>" class="d-inline-block g-col-6">
                <button type="submit" class="btn btn-info">Edit</button>
            </a>
            <form action="/unpublish_event/<%= event.id %>" class="d-inline-block p-2 g-col-6" method="POST">
                <button type="submit" class="btn btn-info">Unpublish</button>
            </form>
            <form action="/delete/<%= event.id %>" class="d-inline-block g-col-6" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        </div>
        <% }) %>
    </div>
    </div>
    <div class="container">
    <h4 class="mb-4, mt-4">Drafts</h4>
    <% draft_events.forEach(function(event){ %>
        <div class="card mt-4">
            <div class="card-body">
            <h4 class="card-title"><%= event.title %></h4>
            <div class="card-text mb-2">
            <br>
            <h6>description:</h6>
            <%= event.event_description %>
            <h6 class="mt-3">amount of full price tickets:</h6>
            <%= event.ticket_type_full %>
            <br>
            <h6 class="mt-3">full price:</h6>
            $<%= event.ticket_price_full %>
            <h6 class="mt-3">amount of discount price tickets:</h6>
            <%= event.ticket_type_discount %>
            <h6 class="mt-3">discount price:</h6>
            $<%= event.ticket_price_discount %>
            <h6 class="mt-3">event date:</h6>
            <%= event.event_date %>
        </div>
            <div class="card-subtitle text-muted mb-2 mt-4">
            created: <%= event.createdAt %> 
            <br>
            modified: <%= event.modifiedAt%> 
            </div>
            <div class="grid gap-0 column-gap-3">
            <a href="/events/<%= event.id %>" class="d-inline-block g-col-6">
                <button type="submit" class="btn btn-info">Edit</button>
            </a>
            <form action="/publish_event/<%= event.id %>" class="d-inline-block g-col-6" method="POST">
                <button type="submit" class="btn btn-info">Publish</button>
            </form>
            <form action="/delete/<%= event.id %>" class="d-inline-block g-col-6" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        </div>
        <% }) %>
    </div>
</div>
</body>
</html>