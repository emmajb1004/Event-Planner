<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Attendee Home</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Attendee Events</h1>
        <% setting.forEach(function(settings){ %>
            <h4 class="mb-4"><%= settings.title %></h4>
            <h6 class="mb-4"><%= settings.settings_description %></h6>
            <% }) %>
        <a href="/">Back to Home</a>
    
        <% events.forEach(function(event){ %>
            <div class="card mt-4">
                <div class="card-body">
                <h4 class="card-title"><%= event.title %></h4>
                <div class="card-text mb-2">
                <br>
                <h6 class="mt-2">number of full price tickets left:</h6>
                <%= event.ticket_type_full %>
                <h6>number of discount price tickets left:</h6>
                <%= event.ticket_type_discount %>
            </div>
                <div class="card-subtitle text-muted mb-2">
                <h4>event date:</h4>
                <%= event.event_date %>
                </div>
                <a href="/eventDetails/<%= event.id %>"><button type="submit" class="btn btn-primary">More Info</button></a>
            </div>
            <% }) %>
        </div>
    </div>
    </body>
</html>
